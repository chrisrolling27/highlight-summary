{
    "manifest_version": 3,
    "name": "Highlight Summary",
    "version": "1.0",
    "description": "Summarize highlighted text with GTP3",

    "icons": {
        "16": "images/cyan16.png",
        "32": "images/cyan32.png",
        "48": "images/cyan48.png",
        "128": "images/cyan128.png"
    },
    "host_permissions": [
    	"https://some-random-api.ml/*"
  	],
    
    "action": {
      "default_popup": "./dist/index.html"
    },

    "content_scripts": [
      {
          "js": [
              "./src/index.js"
          ],
          "matches": [
              "https://developer.chrome.com/docs/extensions/*",
              "https://developer.chrome.com/docs/webstore/*",
              "https://*/*"
          ]
      }
  ]


}